<div class="container">
  <h1 class="text-center"><%= @user.username %></h1>

  <%= image_tag @user.avatar, class: "rounded-circle shadow mx-auto d-block", alt: @user.username %>

  <div class="text-center">
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-dark btn-md" %>
  </div>
  <h3 class="text-center">Posts</h3>

  <%= render 'posts/post' %>
</div>
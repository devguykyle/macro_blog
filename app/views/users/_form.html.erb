
<%= render 'shared/errors', obj: @user %>

<%= form_with(model: @user, local: true) do |f| %>
  <div class="mb-3">
    <label for="inputEmail" class="form-label"><%= f.label :email %></label>
    <%= f.text_field :email, id: "inputEmail", class: "form-control" %>
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3">
    <label for="inputUsername" class="form-label"><%= f.label :username %></label>
    <%= f.text_field :username, class: "form-control", id: "inputUsername"  %>
  </div>
  <div class="mb-3">
    <label for="inputPassword" class="form-label"><%= f.label :password %></label>
    <%= f.text_field :password, class: "form-control", id: "inputPassword", type: "password"  %>
  </div>

  <div class="mb-3">
    <label for="inputAvatar" class="form-label"><%= f.label :avatar %></label>
    <%= f.file_field :avatar %>
  </div>
  
  <div class="mb-2">
    <%= f.submit(@user.new_record? ? "Sign Up" : "Update User", class: "btn btn-primary btn-md") %>
  </div>
<% end %>
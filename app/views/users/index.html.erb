<div class="container">
  <h1 class="text-center"> Users </h1>

  <% @users.each do |user|%>
    <div class="card" style="width: 100%; margin-top: 10px;">
      <div class="card-header">
        <%= user.username %>
      </div>
      <% if !user.avatar.blank? %>
        <%= image_tag user.avatar, class: "rounded-circle mx-auto d-block", alt: user.username %>
      <% end %>
      <div class="card-body">
        <p class="card-text"><%= user.username %></p>
      </div>
      <div class="card-footer text-muted">
        <button><%= link_to 'view', user_path(user) %></button>
      </div>
    </div>
  <% end %>
</div>
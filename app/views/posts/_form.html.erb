<%= render 'shared/errors', obj: @post %>

<%= form_with(model: @post, local: true) do |f| %>
  <div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label"><%= f.label :title %></label>
    <%= f.text_field :title, id: "exampleFormControlInput1", class: "form-control" %>
  </div>
  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label"><%= f.label :content %></label>
    <%= f.text_area :content, class: "form-control", id: "exampleFormControlTextarea1", rows: 5  %>
  </div>
  
  <div class="mb-2">
    <%= f.submit class: "btn btn-primary btn-md" %>
    <%= link_to 'Cancel', posts_path, class: "btn btn-outline-dark btn-md" %>
  </div>
<% end %>
<h1 class="text-center">All Posts</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-3 align-self-start">
      <div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Card title</h5>
    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
</div>
    </div>
    <div class="col-lg-6 align-self-start" style="background-color: light-gray;">
      <% @posts.each do |post|%>
        <div class="card" style="width: 100%; margin-top: 10px;">
          <div class="card-header">
            <%= post.title %>
          </div>
          <img src="..." class="card-img-top" alt="...">
          <div class="card-body">
            <p class="card-text"><%= post.content %></p>
          </div>
          <div class="card-footer text-muted">
            <button><%= link_to 'view', post_path(post) %></button>
            <button><%= link_to 'delete', post_path(post), method: :delete, data: { confirm: 'Are you sure you want to delete this post?' } %></button>
            2 days ago
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-3 align-self-start" ">
    <div class="card text-center">
    <div class="card-header">
      <ul class="nav nav-tabs card-header-tabs">
        <li class="nav-item">
          <a class="nav-link active" aria-current="true" href="#">Active</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Link</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
        </li>
      </ul>
    </div>
    <div class="card-body">
      <h5 class="card-title">Special title treatment</h5>
      <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
      <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
  </div>
    </div>
  </div>
</div>


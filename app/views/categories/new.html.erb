<h1 class="text-center">Create a Category</h1>


<%= render 'shared/errors', obj: @category %>

<%= form_with(model: @category, local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :name, "Category Name" %>
    <%= f.text_field :name, id: "inputName", class: "form-control" %>
  </div>

  <div class="mb-2">
    <%= f.submit "Create", class: "btn btn-primary btn-md" %>
  </div>
<% end %>
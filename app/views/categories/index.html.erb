<h1 class="text-center mt-4">Categories</h1>

<div class="col-lg-6 align-self-start" style="background-color: light-gray;">

  <% @categories.each do |category|%>
    <div class="card" style="width: 100%; margin-top: 10px;">
      <img src="..." class="card-img-top" alt="...">
      <div class="card-body">
        <p class="card-title"><%= link_to category.name, category_path(category) %></p>
      </div>
      <div class="card-footer text-muted">
        <small>Created <%= time_ago_in_words(category.created_at) %></small>
      </div>
    </div>
  <% end %>

  <%= will_paginate @categories, :page_links => false %>
</div>
